---
import Layout from "../layouts/Layout.astro";
import { allTypes } from "../pokemon_types";
import PokemonPill from "../components/PokemonPill.astro";
import PageContent from "../components/PageContent.astro";
---

<Layout title="Pokemon Go Companion">
  <PageContent>
    <h1 class="text-gradient">Pokemon Go Companion</h1>

    <div>
      <h2>Attack Types</h2>

      <ul role="list" class="link-card-grid">
        {
          allTypes.map((type) => (
            <li>
              <a href={`/pokemon-go-companion/types/attack/${type}`}>
                <PokemonPill interactive type={type} />
              </a>
            </li>
          ))
        }
      </ul>
    </div>

    <div>
      <h2>How to defeat</h2>

      <ul role="list" class="link-card-grid">
        {
          allTypes.map((type) => (
            <li>
              <a href={`/pokemon-go-companion/types/defense/${type}`}>
                <PokemonPill interactive type={type} />
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </PageContent>
</Layout>

<style>
  h1 {
    font-size: 3rem;
    font-weight: 700;
    line-height: 1;
    margin-top: 1em;
    margin-bottom: 1em;
  }

  h2 {
    font-size: 2rem;
    font-weight: 700;
    line-height: 1;
    margin-top: 0.5em;
    margin-bottom: 0.5em;
  }

  ul {
    padding: 0;
    margin: 0;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    grid-gap: 16px;
  }
  li {
    list-style: none;
    display: flex;
    justify-content: center;
  }

  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
  a {
    color: white;
    display: flex;
    gap: 1em;
    align-items: center;
    text-decoration: none;
    width: 100%;
  }

  a span {
    text-transform: uppercase;
  }
</style>
