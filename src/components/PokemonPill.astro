---
import Pill from "./Pill.astro";
import { pokemonTypesConfig } from "../pokemon_types_config";
import type { PokemonType } from "../pokemon_types";

interface Props {
  type: PokemonType;
  interactive?: boolean;
}

const { type, interactive } = Astro.props;
---

<Pill
  image={pokemonTypesConfig[type].image}
  color={pokemonTypesConfig[type].color}
  interactive={interactive}
>
  {pokemonTypesConfig[type].label}
</Pill>
