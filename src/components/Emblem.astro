---
interface Props {
  image: string;
  color: string;
}

const { image, color } = Astro.props;
---

<div style={{ backgroundColor: color }}>
  <img src={image} />
</div>

<style>
  div {
    width: 50px;
    height: 50px;
    border-radius: 50%;
  }

  img {
    width: 100%;
    height: 100%;
  }
</style>
