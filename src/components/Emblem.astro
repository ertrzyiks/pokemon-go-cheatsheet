---
interface Props {
  image: string;
  color: string;
}

const { image, color } = Astro.props;
---

<div style={{ backgroundColor: color }}>
  <img src={image} />
</div>

<style>
  div {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    border: 1px solid #eeeeee;
  }

  img {
    width: 100%;
    height: 100%;
  }
</style>
